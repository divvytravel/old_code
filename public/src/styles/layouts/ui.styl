.ui
  &.opacity
    opacity 1

  .promo
    height 73px
    margin-bottom 1px

  .container
    position relative

    .elements
      padding 16px 17px 0px 17px

    .fields
      @clearfix()

      .fields-cell
        float left
        width 180px
        margin-bottom 12px
        margin-right 18px
        list-style none

      .fields-cell-middle
        width 256px

      .fields-cell-right
        position relative

        .fields-cell-right-container
          position absolute
          top 6px
          width 167px
          
          .check-group-data-wrapper
            width 290px
            display block
            padding-top 20px

    .categories
      width 620px
      margin-top 48px
      padding 9px 25px 11px
      background #fff
      box-shadow 0px 0px 5px rgba(0, 0, 0, 0.1)

      &:last-child
        margin-top 17px

      .sub-category
        margin-top 10px

        @clearfix()

        ul
          float left
          width 490px

          li
            list-style none
            float left
            width 122px

    .sliders-container
      position absolute
      right 42px
      top 312px
      width 182px

    .checkboxes
      position absolute
      top 1599px
      left 357px
      width 400px

      .checkboxes-cell
        width 180px
        display inline-block

    .help-container
      position absolute
      top 1903px
      left 770px
  
      .help-container-wrap
        position relative

    .buttons-container
      position absolute
      top 1267px
      left 12px
      width 290px
      padding 0px 18px

      .button-item
        margin-bottom 17px

      .button-item:first-child
        margin-bottom 37px
