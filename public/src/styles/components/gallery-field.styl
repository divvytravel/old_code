.gallery-field
  background rgba(0, 0, 0, 0.03)
  box-shadow inset 0px 1px 3px rgba(0, 0, 0, 0.25)
  border-radius 3px
  overflow hidden
  
  .gallery-field-main
    height 398px
    border-bottom 1px solid rgba(0, 0, 0, 0.1)
    overflow hidden
    text-align center

    .gallery-field-main-photo
      height 398px
      overflow hidden

    img
      max-height 398px
      max-width 600px

    .gallery-field-main-content
      display block
      text-align center

      a, span
        display block

      span
        margin 71px 0px 4px 0px
        font-size 21px
        color rgba(0, 0, 0, 0.4)
        font-weight pragmatica-web

  .gallery-field-additional
    position relative
    height 67px
    padding-top 21px

    .gallery-field-additional-content
      display block
      text-align center

      a, span
        display block

      span
        margin 0px 0px 4px 0px
        font-size 21px
        color rgba(0, 0, 0, 0.4)
        font-weight pragmatica-web

    .gallery-field-additional-photos
      position absolute
      top 0px
      z-index 1
      
      img
        margin 3px 0px 0px 3px
        height 82px