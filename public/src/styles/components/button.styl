.button
  display inline-block
  width 100%
  border-radius 3px
  text-align center
  cursor pointer

.button--color-blue
  color white
  padding 12px 0px
  background #31b9da
  border 1px solid #2aa1bf
  box-shadow 1px 0px 5px rgba(22, 76, 89, 0.15)

.button--type-action
  position relative
  height 28px
  padding 3px 0px 0px 11px
  text-align left
  font-size 13px
  color #31b9da
  border 1px solid rgba(49, 185, 218, 0.4)
  box-shadow 1px 0px 5px rgba(22, 76, 89, 0.15)
  background white
  vertical-align top
  line-height 25px
  
  &:hover
    border 1px solid rgba(49, 185, 218, 0.5)
    background rgba(49, 185, 218, 0.09)
  
  .button-icon
    margin-top 4px
    margin-right 8px

  .button-picker
    position absolute
    top 8px
    right 8px

.button--type-category
  display inline-block
  padding 2px 7px
  margin 0px 1px

  border 1px solid transparent
  border-radius 3px

  font-size 13px
  line-height 18px
  color #31b9da

  &.active
    border 1px solid rgba(49, 185, 218, 0.6)
    background rgba(49, 185, 218, 0.15)
    box-shadow 1px 0px 5px rgba(22, 76, 89, 0.15)

    &:hover
      border 1px solid rgba(49, 185, 218, 0.7)
      background rgba(49, 185, 218, 0.25)

  &:hover
    border 1px solid rgba(49, 185, 218, 0.5)
    background rgba(49, 185, 218, 0.09)
    box-shadow 1px 0px 5px rgba(22, 76, 89, 0.15)

    