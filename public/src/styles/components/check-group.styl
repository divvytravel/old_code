.check-group
  display table
  @clearfix()
  
  .button
    display table-cell
    width 48px
    height 52px
    padding 2px 2px 2px 2px
    font-size 10px
    line-height 14px
    text-align center
    vertical-align middle

  .check-group-item
    margin-right 6px
    display inline-block

    span
      margin 0px
      padding-bottom 3px
      text-align center
      font-size 13px
