.blog
  margin-top 34px
  background white
  
  .blog-container
    width 960px
    margin 0px auto
    padding 24px 0px 36px 0px

  .blog-title
    font-size 33px
    padding-bottom 12px

  .blog-post
    display inline-block
    width 290px
    margin-right 30px
    vertical-align top

    .blog-post-title
      font-size 15px
      font-family pragmatica-web
      text-decoration underline
      line-height 22px

    .blog-post-created
      margin 7px 0px 18px 0px
      font-size 11px
      color rgba(0, 0, 0, 0.7)

    .blog-post-text
      font-size 13px
      color rgba(0, 0, 0, 0.9)
