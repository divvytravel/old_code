.trips
  .trips-item
    padding 24px 36px 29px 36px
    border-bottom 1px solid #e5e5e5

    @clearfix()

    &.trips-item-advised
      background #fcf5cf

      .trips-item-advised-title
        margin-bottom 8px
        font-size 9px
        font-weight bold
        text-transform uppercase

      //.trips-item-content
      //  .trips-item-info
      //    box-shadow 2px 0px 12px rgba(0, 0, 0, 0.15)

    .trips-item-title
      a
        position: relative
        font-family pragmatica-web
        font-weight 200
        font-size 21px
        line-height 27px

      a::after
        content ' '
        border-bottom 1px solid #31b9da
        position absolute
        left 0
        top 25px
        width 100%

      .trips-item-title-star
        display inline-block
        position relative
        top -9px
        left 9px
        width 16px
        height 16px
        background-image url("/static/img/star-inactive.png")

    .trips-item-tour
      font-size 13px
      line-height 21px
      opacity 0.7
      color black

    .trips-item-tags
      margin-top 12px

    .trips-item-content
      position relative
      margin-top 9px

      @clearfix()

      .trips-item-preview
        float left
        width 360px
        border-radius 4px
  
        img
          width 360px
          height 360px
  
      .trips-item-info
        position absolute
        top 0px
        right 0px
        width 220px
        min-height 360px

        background white
        border-radius 5px
        box-shadow 0px 1px 5px rgb(200, 200, 200)

      .trips-item-info-title
        padding 12px 18px
        border-bottom 1px solid #e5e5e5
        font-weight 200
        font-size 13px
        
        .calendar-black
          position relative
          top 2px

      .trips-item-info-detail
        padding 12px 18px
        border-bottom 1px solid #e5e5e5
        min-height 78px

      .trips-item-info-price
        font-family pragmatica-web
        font-size 21px
        line-height 27px

      .trips-item-info-type
        margin-top 9px
        font-size 13px
        color rgba(0, 0, 0, 0.7)

      .trips-item-info-avia
        font-size 13px
        line-height 18px
        color rgba(0, 0, 0, 0.9)
        
      .trip-item-info-travellers
        padding 16px 14px 0px 18px
        
        .trip-item-info-travellers-title
          font-family pragmatica-web
          font-size 21px

        .trip-item-info-travellers-slider
          margin-top 12px

          .ui-slider
            width 156px
            display inline-block
            margin-right 4px
            
            .ui-slider-range
              background linear-gradient(to right, #24c9f2 0%, #f26161 42%)

        .trip-item-info-travellers-ratio
          div:first-child
            margin-top 9px
            font-size 13px

          div:last-child
            margin-top 5px
            margin-bottom 12px
            font-size 13px
            color #c68189

  .trips-next
    padding 20px 36px


