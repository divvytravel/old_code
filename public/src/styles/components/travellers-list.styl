.travellers-list
  position relative

  @clearfix()

  .travellers-list-item-details
    position absolute
    padding 9px 15px 9px 9px
    min-width 180px
    border-radius 3px
    background white
    box-shadow 2px 0px 12px rgba(0, 0, 0, 0.25)
    z-index 2

    &.travellers-list-item-details-small
      min-width 165px

      img
        width 45px
        height 45px
        
      .travellers-list-item-details-info
        max-width 100px

    img
      width 58px
      height 58px
      border-radius 2px

    .travellers-list-item-details-wrap
      position relative

      .travellers-list-item-details-wrap-close
        position absolute
        top -9px
        right -15px
        width 7px
        height 5px
        padding 5px 4px
        border-radius 0px 4px 0px 4px
        cursor pointer

        &:hover
          background rgba(49, 185, 218, 0.15)

        img
          width 7px
          height 5px

    .travellers-list-item-details-icon
      float left

    .travellers-list-item-details-info
      float left
      padding-left 6px
      max-width 114px
      
      a
        display block
        margin-bottom 3px
        text-decoration underline
        font-size 11px

      span
        display block
        padding 2px 0px
        color rgba(0, 0, 0, 0.7)
        font-size 11px
        font-family pragmatica-web

  .travellers-list-items
    height 95px
    overflow hidden
    z-index 1
    
    @clearfix()
    
    &.travellers-list-items-expanded
      overflow initial

  .travellers-list-item-icon
    position relative
    float left
    margin 0px 3px 3px 0px
    background #f9f9f9

  .travellers-list-item-normal-icon    
    img
      width 58px
      height 58px

    .travellers-list-item-popup
      top -9px
      left -9px
      padding 9px

  .travellers-list-item-small-icon
    margin 0px 2px 2px 0px

    img
      width 45px
      height 45px

  .travellers-list-next
    position absolute
    width 100%
    height 16px
    padding-top 8px
    background rgba(255, 255, 255, 0.7)
    text-align center
    cursor pointer
    z-index 2

  .travellers-list-prev
    width 100%
    height 16px
    padding-top 9px
    text-align center
    cursor pointer
    z-index 2
    clear both

  .travellers-list-next
    bottom 0px
