.trip
  .trip-block
    padding 20px 36px 24px 36px
    border-bottom 1px solid #e5e5e5

    .trip-block-title
      margin-bottom 18px
      text-align center
      font-size 21px
      font-family pragmatica-web

  .trip-title
    padding 22px 0px
    border-bottom 1px solid #e5e5e5
    text-align center
    
    div
      margin-bottom 11px
      font-family pragmatica-web
      font-weight 200
      font-size 33px
      color rgba(0, 0, 0, 0.9)

    a
      text-decoration underline
      font-size 13px

  .trip-block-success
    clearfix()

    .button
      width 294px
      display inline-block
      
    .button--color-green
      margin-left 8px

    .checkbox
      float right
      margin-top 10px
